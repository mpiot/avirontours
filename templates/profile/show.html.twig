{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">Mon profil</li>
{% endblock %}

{% block body %}
    <div class="d-flex my-3">
        <div>
            <span class="user-profile-picture">{{ user.firstName|slice(0, 1)|upper }}{{ user.lastName|slice(0, 1)|upper }}</span>
        </div>
        <div class="ml-5">
            <h3>{{ user.email }}</h3>

            <div class="btn-group btn-group-sm" role="group">
                <a class="btn btn-secondary" href="{{ path('profile_edit_password') }}">
                    <span class="fas fa-key" aria-hidden="true"></span> Change password
                </a>

                <a class="btn btn-warning" href="{{ path('profile_edit') }}">
                    <span class="fas fa-pencil-alt" aria-hidden="true"></span> Edit
                </a>
            </div>

            <p class="mt-3">Valide jusqu'au {{ user.licenseEndAt|date('d/m/Y') }}</p>
        </div>
    </div>

    <h2>Saisons</h2>

    {% if is_granted('RENEW', app.user) %}
        <a class="btn btn-primary" href="{{ path('renew') }}">S'inscrire pour la prochaine saison</a>
    {% endif %}

    <div class="row">
        <div class="col-6">
            {% for license in user.licenses %}
                <div class="card mt-3">
                    <div class="card-header">
                        Saison {{ license.seasonCategory.season.name }} ({{ license.seasonCategory.name }})
                    </div>
                    <div class="card-body">
                        <p>{{ (license.medicalCertificate.textType ~ ' ' ~ license.medicalCertificate.textLevel)|capitalize }} du {{ license.medicalCertificate.date|date('d/m/Y') }}</p>
                        <p>Fin de validit√©: {{ license.seasonCategory.season.licenseEndAt|date('d/m/Y') }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
