{{ form_start(form) }}

    <div class="row">
        <div class="col-lg-6 mb-3 mb-lg-0">
            <div class="card">
                <div class="card-header">
                    Informations personnelles
                </div>
                <div class="card-body">
                    {{ form_row(form.email) }}
                    {{ form_row(form.phoneNumber) }}

                    <div class="row">
                        <div class="col">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    Adresse
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.address.laneNumber) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.address.laneType) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.address.laneName) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.address.postalCode) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.address.city) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            Préférences de communication
        </div>
        <div class="card-body">
            {{ form_row(form.clubEmailAllowed) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <button class="btn btn-primary mt-3">{{ button_label|default('Sauver') }}</button>
{{ form_end(form) }}
