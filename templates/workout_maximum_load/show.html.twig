                    <th scope="col">40%</th>
                    <th scope="col">30%</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row">
                        Tirade rowing<br>
                        <span class="font-weight-normal">Barre de 10Kg</span>
                    </th>
                    <td>
                        {{ app.user.workoutMaximumLoad.rowingTirage }}<br>
                        <small>{{ (app.user.workoutMaximumLoad.rowingTirage - 10) / 2 }}</small>
                    </td>
                    <td>
                        {{ app.user.workoutMaximumLoad.rowingTirage * 0.9 }}<br>
                        <small>{{ (app.user.workoutMaximumLoad.rowingTirage * 0.9 - 10) / 2 }}</small>
                    </td>
                    <td>
                        {{ app.user.workoutMaximumLoad.rowingTirage * 0.8 }}<br>
                        <small>{{ (app.user.workoutMaximumLoad.rowingTirage * 0.8 - 10) / 2 }}</small>
