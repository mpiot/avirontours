<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png')}}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <title>{% block title %}Aviron Tours Métropole{% endblock %}</title>
    </head>

    <body class="d-flex flex-column">
        <header class="navbar navbar-expand navbar-light bg-white flex-column flex-md-row border-bottom shadow-sm top-navbar">
            <a class="navbar-brand mr-0 mr-md-2" href="{{ path('homepage') }}">
                <img src="{{ asset('build/images/logo_50.png') }}" class="d-inline-block align-top" alt="">
            </a>

            {% if is_granted('ROLE_USER') %}
                <div class="navbar-nav-scroll">
                    <ul class="navbar-nav flex-row">
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('logbook_entry_index') }}">Cahier de sorties</a>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_homepage') }}">Administration</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>

                {% if app.user %}
                    <ul class="navbar-nav ml-md-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ app.user.fullName }}
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="{{ path('profile_show') }}">Mon profil</a>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a>
                            </div>
                        </li>
                    </ul>
                {% else %}
                    <div class="ml-md-auto">
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary rounded-pill">Se connecter</a>
                    </div>
                {% endif %}

                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                    <a class="btn btn-danger rounded-pill"
                       href="{{ path('user_index', {'_switch_user': '_exit'}) }}">
                        <span class="fas fa-user-slash"></span> Quitter l'impersonation
                    </a>
                {% endif %}
            {% endif %}
        </header>

        <div class="container-fluid">
            {% block container %}
                <main class="py-md-3" role="main">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            {% block breadcrumb %}
                                <li class="breadcrumb-item"><a href="{{ path('homepage') }}"><span class="fas fa-home"></span> Accueil</a></li>
                            {% endblock %}
                        </ol>
                    </nav>

                    {# List flashes messages #}
                    {% for label, messages in app.flashes(['success', 'info', 'warning', 'danger']) %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible d-print-none" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                {{ message|trans }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% block body %}{% endblock %}
                </main>
            {% endblock %}
        </div>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
