<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png')}}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <title>{% block title %}Aviron Tours Métropole{% endblock %}</title>
    </head>

    <body>
        <header>
            <!-- Fixed navbar -->
            <nav class="navbar navbar-expand-md navbar-light fixed-top bg-white">
                <a class="navbar-brand" href="{{ path('homepage') }}">
                    <img src="{{ asset('build/images/logo_50.png') }}" class="d-inline-block align-top" alt="Aviron Tours Métropole">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    {% if is_granted('ROLE_USER') %}
                        <ul class="navbar-nav mr-auto">
                            {% if is_granted('ROLE_LOGBOOK_USER') or (is_granted('ROLE_USER') and app.user.hasValidLicense()) or is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('logbook_entry_index') }}">Cahier de sorties</a>
                                </li>
                            {% endif %}

                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('admin_homepage') }}">Administration</a>
                                </li>
                            {% endif %}
                        </ul>

                        {% if app.user and is_granted('ROLE_USER')%}
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        {{ app.user.fullName }}
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="{{ path('profile_show') }}">Mon profil</a>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a>
                                        {% if is_granted('IS_IMPERSONATOR') %}
                                            <a class="dropdown-item text-danger" href="{{ path('user_index', {'_switch_user': '_exit'}) }}">Quitter l'impersonation</a>
                                        {% endif %}
                                    </div>
                                </li>
                            </ul>
                        {% else %}
                            <div class="ml-md-auto">
                                <a href="{{ path('app_login') }}" class="btn btn-outline-primary rounded-pill">Se connecter</a>
                            </div>
                        {% endif %}
                    {% endif %}

                </div>
            </nav>
        </header>

        <!-- Begin page content -->
        <main role="main" class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    {% block breadcrumb %}
                        <li class="breadcrumb-item"><a href="{{ path('homepage') }}"><span class="fas fa-home"></span> Accueil</a></li>
                    {% endblock %}
                </ol>
            </nav>

            {# List flashes messages#}
            {% for label, messages in app.flashes(['success', 'info', 'warning', 'danger']) %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible d-print-none" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ message|trans }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <div class="container">
                <a href="{{ path('legal_notice') }}">Mentions légales</a>
                <a href="{{ asset('files/guide_atm_2020.pdf') }}" class="ml-3">Guide 2020</a>
            </div>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
