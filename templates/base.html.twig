<!doctype html>
<html lang="fr" class="h-100">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png')}}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <title>{% block title %}Aviron Tours Métropole{% endblock %}</title>
    </head>

    <body class="d-flex flex-column">
        <header class="navbar navbar-expand navbar-light bg-white flex-column flex-md-row border-bottom shadow-sm top-navbar">
            <a class="navbar-brand mr-0 mr-md-2" href="{{ path('homepage') }}">
                <img src="{{ asset('build/images/logo_50.png') }}" class="d-inline-block align-top" alt="">
            </a>

            <div class="navbar-nav-scroll">
                <ul class="navbar-nav flex-row">
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('logbook_entry_index') }}">Cahier de sorties</a>
                        </li>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('club_management_homepage') }}">Gestion du club</a>
                        </li>
                    {% endif %}
                </ul>
            </div>

            {% if app.user %}
                <ul class="navbar-nav ml-md-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ app.user.email }}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path('profile_show') }}">Mon profil</a>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    </li>
                </ul>
            {% else %}
                <div class="ml-md-auto">
                    <a href="{{ path('app_login') }}" class="btn btn-outline-secondary rounded-pill">Se connecter</a>
                    <a href="{{ path('app_register') }}" class="btn btn-primary rounded-pill">Créer un compte</a>
                </div>
            {% endif %}
        </header>

        {% block main_body %}
            <div class="container-fluid">
                <div class="row flex-xl-nowrap">
                    <div class="col-md-3 col-xl-2 d-flex align-items-start">
                        <nav class="left-nav-links collapse" id="left-nav">
                            {% block nav %}
                            {% endblock %}
                        </nav>

                        <button class="btn border d-md-none text-secondary px-3 my-3 float-right ml-auto" type="button" data-toggle="collapse" data-target="#left-nav" aria-controls="left-nav" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" role="img" focusable="false">
                                <title>Menu</title>
                                <path stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2" d="M4 7h22M4 15h22M4 23h22"></path>
                            </svg>
                        </button>
                    </div>

                    <main class="col-md-9 col-xl-10 py-md-3 pl-md-5" role="main">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                {% block breadcrumb %}
                                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}"><span class="fas fa-home"></span> Accueil</a></li>
                                {% endblock %}
                            </ol>
                        </nav>

                        {% block body %}{% endblock %}
                    </main>
                </div>
            </div>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
