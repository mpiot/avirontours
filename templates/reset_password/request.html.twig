{% extends 'base_background.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="fs-4 mb-3">Réinitialiser mon mot de passe</div>

    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_row(form.username, {
            'help': 'Nom utilisateur: prenom.nom'
        }) }}

        <div class="d-grid gap-2">
            <button class="btn btn-lg btn-primary">Envoyer un email de récupération</button>
        </div>
    {{ form_end(form) }}
{% endblock %}
