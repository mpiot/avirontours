{% extends 'base.html.twig' %}

{% block title %}{{ training.trainedAt|date('d/m/Y - H:i') }} - {{ training.sport.label }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('training_index') }}">Carnet d'entra√Ænements</a></li>
    <li class="breadcrumb-item active">{{ training.trainedAt|date('d/m/Y - H:i') }} - {{ training.sport.label }}</li>
{% endblock %}

{% block body %}
    <div class="d-flex">
        <h3>
            {{ training.sport.label }}<br>
            <small>{{ training.trainedAt|date('d/m/Y - H:i') }}</small>
        </h3>

        <div class="ms-auto align-self-center ">
            {% embed 'training/_delete_form.html.twig' %}
                {% block buttons %}
                    <div class="btn-group-sm">
                        <a class="btn btn-outline-warning" href="{{ path('training_edit', {'id': training.id}) }}">
                            <span class="fas fa-pencil-alt"></span> Modifier
                        </a>

                        {{ parent() }}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {{ include('training/_show.html.twig') }}
{% endblock %}
