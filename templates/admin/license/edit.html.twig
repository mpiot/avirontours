{% extends 'admin/base.html.twig' %}

{% block title %}Modifier une licence{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('user_index') }}">Gestion des saisons</a></li>
    <li class="breadcrumb-item"><a href="{{ path('season_show', { 'id': license.seasonCategory.season.id }) }}">{{ license.seasonCategory.season.name }}</a></li>
    <li class="breadcrumb-item"><a href="{{ path('user_show', { 'id': license.user.id }) }}">{{ license.user.fullName }}</a></li>
    <li class="breadcrumb-item active">Modifier une licence</li>
{% endblock %}

{% block body %}
    <div class="d-flex">
        <h1>Modifier la licence de {{ license.user.fullName }}</h1>

        {% if is_granted('ROLE_SEASON_ADMIN') %}
            <div class="ms-auto align-self-center">
                {{ include('admin/license/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>

    <div class="card border-0 shadow">
        <div class="card-body">
            {{ include('admin/license/_form.html.twig', {'button_label': 'Modifier'}) }}
        </div>
    </div>
{% endblock %}
