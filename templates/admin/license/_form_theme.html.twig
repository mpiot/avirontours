{% block _license_payment_payments_entry_widget %}
    <div class="row">
        <div class="col">
            {{ form_row(form.children.method, { attr: { 'data-action': 'dependent-field#change' } }) }}
        </div>
        <div class="col">
            {{ form_row(form.children.amount) }}
        </div>
        <div class="col" id="{{ form.children.checkNumber.vars.id }}_container" {{ stimulus_target('dependent-field', 'target') }}>
            {{ form_row(form.children.checkNumber) }}
        </div>
        <div class="col" id="{{ form.children.checkDate.vars.id }}_container" {{ stimulus_target('dependent-field', 'target') }}>
            {{ form_row(form.children.checkDate) }}
        </div>
    </div>
{% endblock %}

