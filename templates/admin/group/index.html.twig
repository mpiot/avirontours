{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des groupes{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">Gestion des groupes</li>
{% endblock %}

{% block body %}
    <div class="d-flex">
        <h1>Gestion des groupes</h1>

        <a href="{{ path('group_new') }}" class="btn btn-outline-primary btn-sm ms-auto align-self-center">
            <span class="fas fa-plus"></span> Ajouter un groupe
        </a>
    </div>

    <div class="card border-0 shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for group in groups %}
                        <tr>
                            <td>
                                <a href="{{ path('group_show', {'id': group.id}) }}">{{ group.name }}</a>
                            </td>
                            <td class="text-end">
                                <a class="btn btn-outline-warning btn-sm rounded-pill"
                                   href="{{ path('group_edit', {'id': group.id}) }}">
                                    <span class="fas fa-pencil-alt"></span> <span class="d-none d-lg-inline">Modifier</span>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="text-center">Pas de groupe</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
