{% extends 'admin/base.html.twig' %}

{% block title %}Modifier un bâteau{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('shell_index') }}">Gestion du parc</a></li>
    <li class="breadcrumb-item"><a href="{{ path('shell_show', {'id': shell.id}) }}">{{ shell.name }}</a></li>
    <li class="breadcrumb-item active">Modifier un bâteau</li>
{% endblock %}

{% block body %}
    <div class="d-flex">
        <h1>Modifier un bâteau</h1>

        <div class="ms-auto align-self-center">
            {{ include('admin/shell/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="card border-0 shadow">
        <div class="card-body">
            {{ include('admin/shell/_form.html.twig', {'button_label': 'Modifier'}) }}
        </div>
    </div>
{% endblock %}
