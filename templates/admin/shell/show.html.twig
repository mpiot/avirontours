{% extends 'admin/base.html.twig' %}

{% block title %}{{ shell.name }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('shell_index') }}">Gestion du parc</a></li>
    <li class="breadcrumb-item active">{{ shell.name }}</li>
{% endblock %}

{% block body %}
    <div class="d-flex">
        <h1>{{ shell.name }}</h1>

        <div class="ml-auto align-self-center ">
            {% embed 'admin/shell/_delete_form.html.twig' %}
                {% block buttons %}
                    <div class="btn-group-sm">
                        <a class="btn btn-outline-warning" href="{{ path('shell_edit', {'id': shell.id}) }}">
                            <span class="fas fa-pencil-alt"></span> Modifier
                        </a>

                        {{ parent() }}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    <div class="card border-0 shadow">
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ shell.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ shell.name }}</td>
                </tr>
                <tr>
                    <th>NumberRowers</th>
                    <td>{{ shell.numberRowers }}</td>
                </tr>
                <tr>
                    <th>Coxed</th>
                    <td>{{ shell.coxed ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>RowingType</th>
                    <td>{{ shell.rowingType }}</td>
                </tr>
                <tr>
                    <th>Yolette</th>
                    <td>{{ shell.yolette ? 'Yes' : 'No' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
