{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col">
            {{ form_row(form.date) }}
        </div>

        <div class="col">
            {{ form_row(form.dayPart) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.sport) }}
        </div>

        <div class="col">
            {{ form_row(form.type) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form.duration.vars.label }}
        <div id="{{ form.duration.vars.id }}" class="row">
            {{ form_errors(form.duration) }}
            <div class="col">{{ form_row(form.duration.hours) }}</div>
            <div class="col">{{ form_row(form.duration.minutes) }}</div>
        </div>
    </div>

    {{ form_row(form.distance) }}
    {{ form_row(form.ratedPerceivedExertion) }}
    {{ form_row(form.comment) }}

    {{ form_rest(form) }}

    <button class="btn btn-primary">{{ button_label|default('Sauver') }}</button>
{{ form_end(form) }}
