{% extends 'logbook_entry/base.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('logbook_entry_index') }}">Cahier de sorties</a></li>
    <li class="breadcrumb-item text-muted">{{ logbook_entry.date|date('d/m/Y')}} - {{ logbook_entry.startAt|date('H:m')}} - {{ logbook_entry.shell.fullName }}</li>
    <li class="breadcrumb-item active">Modifier une sortie</li>
{% endblock %}

{% block body %}
    <div class="d-flex">
        <h1>Modifier une sortie</h1>

        <div class="ms-auto align-self-center">
            {{ include('logbook_entry/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="card border-0 shadow">
        <div class="card-body">
            {{ include('logbook_entry/_form.html.twig', {'button_label': 'Modifier'}) }}
        </div>
    </div>
{% endblock %}
