{% extends 'logbook_entry/base.html.twig' %}

{% block title %}Ajouter une sortie{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('logbook_entry_index') }}">Cahier de sorties</a></li>
    <li class="breadcrumb-item active">Ajouter une sortie</li>
{% endblock %}

{% block body %}
    <h1>Ajouter une sortie</h1>

    <div class="card border-0 shadow">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.shell) }}

                {{ form_row(form.crewMembers) }}

                {% if form.nonUserCrewMembers is defined %}
                    {{ form_row(form.nonUserCrewMembers) }}
                {% endif %}

                {{ form_row(form.startAt) }}

                <button class="btn btn-primary">Sauver</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
