{% extends 'base.html.twig' %}

{% block title %}Réinscription à Aviron Tours{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active"><a href="{{ path('profile_show') }}">Mon profil</a></li>
    <li class="breadcrumb-item active">Réinscription à Aviron Tours</li>
{% endblock %}

{% block body %}
    <h1>Réinscription pour la saison {{ season_category.season.name }} - {{ season_category.name }}</h1>

    <div class="card border-0 shadow mt-3">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="card mt-3">
                <div class="card-header">
                    Certificat médical ou attestation
                </div>
                <div class="card-body">
                    {{ form_row(form.medicalCertificate.type) }}
                    {{ form_row(form.medicalCertificate.level) }}
                    {{ form_row(form.medicalCertificate.date) }}

                    {{ form_row(form.medicalCertificate.file) }}

                    <div>
                        <div class="alert alert-info" role="alert">
                            <span class="fas fa-info-circle"></span>
                            Document à fournir:
                            <ul>
                                <li>Un <strong>certificat médical</strong> d'aptitude à la pratique de l'aviron de moins d'1an</li>
                                <li>Une <strong>attestation</strong> questionnaire santé (non pas le questionnaire santé lui même)</li>
                            </ul>
                        </div>

                        <ul>
                            <li>
                                <a href="{{ asset('files/qs-sport-majeurs.pdf') }}">
                                    <span class="far fa-file-pdf"></span> Questionnaire santé pour personnes majeurs
                                </a>
                            </li>
                            <li>
                                <a href="{{ asset('files/qs-sport-mineurs.pdf') }}">
                                    <span class="far fa-file-pdf"></span> Questionnaire santé pour personnes mineurs
                                </a>
                            </li>
                            <li>
                                <a href="{{ asset('files/attestation-qs-sport.pdf') }}">
                                    <span class="far fa-file-pdf"></span> Attestation questionnaire santé (majeurs et mineurs)
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                {{ form_row(form.federationEmailAllowed) }}
            </div>

            <div class="mt-3">
                {{ form_row(form.agreeSwim) }}
            </div>

            <button class="btn btn-primary mt-3">S'inscrire</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
